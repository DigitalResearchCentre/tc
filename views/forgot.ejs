<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body class="jumbotron text-center" style="width: 580px;  margin:25px 5px 5px 5px; font-size:120%">

    <h4> New Password for Textual Communities</h4>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
      <script>
        document.body.style.marginTop="0px";
        document.body.style.position="relative";
        document.body.style.top="-10px";
      </script>
        <div class="alert alert-danger" style="padding: 0px"><%= message %></div>
    <% } %>

    <!-- New password FORM -->
    <form action="/auth/forgot" method="post" style="text-align: left; margin-top:30px">
        <div class="form-group">
            <label>Email&nbsp;&nbsp;&nbsp;</label>
            <input type="text" class="form-control" style="width: 270px; display: inline-block" name="email">
            <button type="submit" class="btn btn-warning btn-md" style="float:right; width: 190px">Send link to reset password</button>
        </div>
 		     <div class="form-group" style="display:none">
            <label>Password</label>
            <input type="password" class="form-control" name="password" value="xxxx">
        </div>
    </form>


    <p style="margin-top:40px">Need an account? <a href="/auth/signup">Signup</a></p>


</body>
</html>
