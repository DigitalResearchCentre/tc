<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Textual Communities Authentication: forgot password</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> New Password for Textual Communities</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- New password FORM -->
    <form action="/auth/forgot" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
 		<div class="form-group" style="display:none">
            <label>Password</label>
            <input type="password" class="form-control" name="password" value="xxxx">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Send link to reset password</button>
    </form>

    <hr>

    <p>Need an account? <a href="/auth/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>


</div>

</div>
</body>
</html>
