{
  "apps": [{
    "name": "tc",
    "script": "bin/www",
    "node_args":  "--use_strict",
    "watch": true,
    "ignore_watch" : [
      ".git", ".DS_Store",
      "public", 
      "data", 
      "spec", 
      "node_modules", 
      "bower_components" 
    ],
    "watch_options": {
      "followSymlinks": false
    },
    "env": {
      "NODE_ENV": "development"
    },
    "env_production" : {
       "NODE_ENV": "production"
    }
  }, {
    "name": "tc-client",
    "script": "public/webpack.js",
    "watch": ["public/webpack.js"],
    "env": {
      "NODE_ENV": "development"
    },
    "env_production" : {
       "NODE_ENV": "production"
    }
  }, {
    "name": "tc-test",
    "script": "spec/support/jasmine.js",
    "autorestart": false,
    "args": "--no-autorestart",
    "node_args":  "--use_strict",
    "watch": ["spec", "spec/node.spec.js"],
    "env": {
      "NODE_ENV": "test"
    }
  }]
}
